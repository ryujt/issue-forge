# Issue Forge Configuration

global:
  polling_interval: 600  # Seconds to wait when no issues
  ai_provider: claude    # claude or gemini
  model: opus            # opus (4.5), sonnet (4), or haiku (3.5)
  max_iterations: 3      # Max retry attempts per issue

# Logging Configuration
# Can also be set via environment variables:
#   LOG_LEVEL=debug
#   LOG_TO_FILE=true
#   LOG_DIR=logs
logging:
  level: debug           # debug, info, warn, error
  file_enabled: true     # Enable file logging
  file_path: ./logs      # Log file directory
  max_files: 7           # Keep last N log files

# Notification Configuration
# Can also be set via environment variables:
#   SLACK_WEBHOOK_URL=https://hooks.slack.com/services/...
#   TELEGRAM_BOT_TOKEN=your_bot_token
#   TELEGRAM_CHAT_ID=your_chat_id
notifications:
  enabled: false
  provider: none         # Options: slack, telegram, none
  sendAllResponses: true # Send notification for every AI agent response (default: true)

  # Slack configuration:
  # webhookUrl: "https://hooks.slack.com/services/..."

  # Telegram configuration:
  # botToken: "your_bot_token"  # Get from @BotFather
  # chatId: "your_chat_id"      # Get by: 1) Message your bot, 2) curl https://api.telegram.org/bot<TOKEN>/getUpdates

projects:
  - path: "/path/to/your/project"
    # base_branch: main       # Target branch for issue branches and PRs (default: main)
